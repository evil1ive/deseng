{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "paths": {
            "components/*": ["./src/components/*"],
            "config/*": ["./src/config/*"],
            "hooks/*": ["./src/hooks/*"],
            "assets/*": ["./src/assets/*"],
            "pages/*": ["./src/pages/*"],
            "store/*": ["./src/store/*"],
            "utils/*": ["./src/utils/*"],
            "styles/*": ["./src/styles/*"],
        },
    },
    "include": ["src"],
    "references": [
        {
            "path": "./tsconfig.node.json",
        },
    ],
}
